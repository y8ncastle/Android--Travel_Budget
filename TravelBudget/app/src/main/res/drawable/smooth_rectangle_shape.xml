<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_focused="false" android:state_pressed="false">

        <shape>
            <gradient
                android:startColor="#06BEB6"
                android:endColor="#48B1BF"
                android:angle="90">
            </gradient>
            <corners android:radius="10dp"/>
            <stroke android:color="#00FF0000" android:width="1dp"/>
            <padding
                android:top="30dp" android:left="30dp"
                android:right="30dp" android:bottom="30dp"/>
        </shape>
    </item>
</selector>