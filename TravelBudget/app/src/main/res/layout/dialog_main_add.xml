<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smooth_rectangle_shape_dialog">

    <LinearLayout
        android:id="@+id/dialog_top_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_gradient_smooth">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="새로운 내역을 추가합니다"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/chosun_myeongjo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_add_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_top_plate"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소비 내용"
            android:textSize="17sp"
            android:textColor="#303030"
            android:fontFamily="@font/chosun_myeongjo"/>

        <EditText
            android:id="@+id/dialog_add_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:maxLength="20"
            android:fontFamily="@font/chosun_myeongjo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_add_plate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_add_plate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소비 금액"
            android:textSize="17sp"
            android:textColor="#303030"
            android:fontFamily="@font/chosun_myeongjo"/>

        <EditText
            android:id="@+id/dialog_add_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:maxLength="9"
            android:fontFamily="@font/chosun_myeongjo"/>
    </LinearLayout>

    <View
        android:id="@+id/dialog_add_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_add_plate2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="#AFAFAF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_add_view"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="내용추가"
            android:textSize="17sp"
            android:textColor="#303030"
            android:fontFamily="@font/chosun_myeongjo"/>

        <TextView
            android:id="@+id/dialog_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="108dp"
            android:text="입력취소"
            android:textSize="17sp"
            android:textColor="#303030"
            android:fontFamily="@font/chosun_myeongjo"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="52dp"
        android:layout_below="@+id/dialog_add_view"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="1dp"
        android:background="#AFAFAF"/>
</RelativeLayout>